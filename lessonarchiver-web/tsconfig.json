{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "types": ["vite/client"],
        "paths": {
            "src/*": ["./*"],
            "components/*": ["./components/*"],
            "shared/*": ["./shared/*"],
        }
    },
    "include": ["src", "codegen.ts", ""],
    "exclude": ["node_modules", "dist", "vite.config.ts"]
}
